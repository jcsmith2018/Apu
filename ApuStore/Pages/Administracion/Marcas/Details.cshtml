@page
@model ApuStore.Pages.Administracion.Marcas.DetailsModel

@{
    ViewData["Title"] = "Detalle Marcas";
}

<h1>Detalle de Marcas</h1>

<div>
    <h4>Marca</h4>
    <div class="card">
        <div class="card-header" hidden>
            @Model.ProductosMarcas.Nombre
        </div>

        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <h4><strong>Nombre:</strong> @Model.ProductosMarcas.Nombre</h4>
                </li>               
                <li class="list-group-item">
                    <strong class="text-secondary">Orden:</strong>
                    @Model.ProductosMarcas.Orden
                </li>
            </ul>
        </div>
    </div>    
</div>
<div> 
    <a asp-page="./Index">Volver</a>
</div>
