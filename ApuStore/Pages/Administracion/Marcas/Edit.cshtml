@page
@model ApuStore.Pages.Administracion.Marcas.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Modificar</h1>

<h4>Marcas de Productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductosMarcas.Id" />
            <div class="form-group">
                <label asp-for="ProductosMarcas.Nombre" class="control-label mt-2"></label>
                <input asp-for="ProductosMarcas.Nombre" class="form-control" />
                <span asp-validation-for="ProductosMarcas.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductosMarcas.Orden" class="control-label  mt-2"></label>
                <input asp-for="ProductosMarcas.Orden" class="form-control" />
                <span asp-validation-for="ProductosMarcas.Orden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductosMarcas.Observaciones" class="control-label  mt-2"></label>
                <input asp-for="ProductosMarcas.Observaciones" class="form-control" />
                <span asp-validation-for="ProductosMarcas.Observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-2" />
                o <a asp-page="./Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
