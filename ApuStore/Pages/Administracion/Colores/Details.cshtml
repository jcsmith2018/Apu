@page
@model ApuStore.Pages.Administracion.Colores.DetailsModel

@{
    ViewData["Title"] = "Detalle Colores";
}

<h1>Detalle de Colores</h1>

<div>
    <h4>Colores</h4>
      <div class="card">
        <div class="card-header" hidden>
            @Model.ProductosColores.Nombre
        </div>

        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <h4><strong>Nombre:</strong> @Model.ProductosColores.Nombre</h4>
                </li>
                <li class="list-group-item">
                    <strong class="text-secondary">Orden:</strong>
                    @Model.ProductosColores.Orden
                </li>
            </ul>

        </div>
    </div>   
</div>
<div>   
    <a asp-page="./Index">Volver</a>
</div>
